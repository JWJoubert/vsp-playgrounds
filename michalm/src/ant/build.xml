<project name="michalm" default="update_libs">
	<description>
		description
    </description>

	<property name="lib" location="lib" />

	<!--util-->
	<property name="util.dir" location="../../util" />
	<property name="util.ant" location="${util.dir}/src/ant/build.xml" />
	<property name="util.target" location="${util.dir}/target" />

	<!--gandalf-->
	<property name="gandalf.dir" location="../../gandalf" />
	<property name="gandalf.ant" location="${gandalf.dir}/src/ant/build.xml" />
	<property name="gandalf.target" location="${gandalf.dir}/target" />

	<!--vrp-->
	<property name="vrp.dir" location="../../vrp" />
	<property name="vrp.ant" location="${vrp.dir}/src/ant/build.xml" />
	<property name="vrp.target" location="${vrp.dir}/target" />

	<target name="update_libs">
		<ant antfile="${util.ant}" dir="${util.dir}" target="jar" inheritall="false" />
		<ant antfile="${gandalf.ant}" dir="${gandalf.dir}" target="jar" inheritall="false" />
		<ant antfile="${vrp.ant}" dir="${vrp.dir}" target="jar" inheritall="false" />
		
		<copy file="${util.target}/util.jar" tofile="${lib}/michalm-util.jar"/>
		<copy file="${gandalf.target}/gandalf.jar" tofile="${lib}/michalm-gandalf.jar"/>
		<copy file="${vrp.target}/vrp.jar" tofile="${lib}/michalm-vrp.jar"/>

	</target>
</project>
